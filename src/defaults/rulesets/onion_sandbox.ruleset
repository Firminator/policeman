
magic: policeman_ruleset
version: 0.1
id: "onion_sandbox"

l10n:
  en-US:
    name: "Tor isolation"
    description: "Reject .onion -> web and web -> .onion"
  de-DE:
    name: "Tor Isolation"
    description: "Blockiert .onion -> Web und Web -> .onion"
  fa-IR:
    name: "Tor جداسازی"
    description: "رد .onion -> وب و وب -> .onion"

rules:
  web -> web:
    *.onion -> ! *.onion : REJECT
    ! *.onion -> *.onion : REJECT
